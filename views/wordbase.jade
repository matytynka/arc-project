extends layout

block content
    div(class="sidebar")
        button(type="button" id="addword") Dodaj słowo
        br
        button(type="button" id="fromphoto") Dodaj ze zdjęcia
        br
        button(type="button" id="fromarticle") Dodaj z artykułu

        div(id="popup" class="popup")
            div(class="popup-content")
                span(class="close") &times;
                h2 Dodaj własne słowo
                form
                    label Słowo po polsku
                    br
                    input(type="text" id="local")
                    input(type="checkbox" id="translate")
                    label Automatycznie przetłumacz
                    br
                    br
                    label Słowo po hiszpańsku
                    br
                    input(type="text" id="foreign")
                    br
                    br
                    input(type="submit" value="Dodaj")

    div(id="wordbasediv")
        br
        table(style="width:100%")
            caption Twoje słówka
            tr
                th Hiszpański
                th Polski
                th Wykonano
            each word in words
                tr
                    td !{word.foreign}
                    td !{word.local}
                    td !{word.learn}/3

    script.
        var popup = document.getElementById("popup");
        var btn = document.getElementById("addword");
        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function() {
            popup.style.display = "block"
        }

        span.onclick = function() {
            popup.style.display = "none"
        }

